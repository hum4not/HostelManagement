<Window x:Class="DormitoryManagement.Views.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DormitoryManagement.Views"
        xmlns:vm="clr-namespace:DormitoryManagement.ViewModels"
        xmlns:converters="clr-namespace:DormitoryManagement.Converters"
        mc:Ignorable="d"
        Title="Учёт общежития" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToWidthConverter x:Key="BoolToWidthConverter"/>
        <converters:BoolToMenuIconConverter x:Key="BoolToMenuIconConverter"/>

        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style TargetType="TextBox" x:Key="EditTextBoxStyle">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" Background="#FF2D2D30" 
                Width="{Binding IsMenuExpanded, Converter={StaticResource BoolToWidthConverter}, ConverterParameter=250}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Кнопка свернуть/развернуть меню -->
                <Button Grid.Row="0" Content="{Binding IsMenuExpanded, Converter={StaticResource BoolToMenuIconConverter}}" 
                        Command="{Binding ToggleMenuCommand}" 
                        Style="{StaticResource MenuButtonStyle}"
                        HorizontalAlignment="Right"/>

                <!-- Основное содержимое меню -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Общежития -->
                        <TextBlock Text="Общежития" Style="{StaticResource MenuHeaderStyle}"/>
                        <ListView ItemsSource="{Binding Dormitories}" 
                                  SelectedItem="{Binding SelectedDormitory}"
                                  Height="150">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="5">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding Address}" Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <Button Content="Добавить" Command="{Binding AddDormitoryCommand}" Style="{StaticResource SmallButtonStyle}"/>
                            <Button Content="Изменить" Command="{Binding EditDormitoryCommand}" Style="{StaticResource SmallButtonStyle}"/>
                            <Button Content="Удалить" Command="{Binding DeleteDormitoryCommand}" Style="{StaticResource SmallButtonStyle}"/>
                        </StackPanel>

                        <!-- Комнаты -->
                        <TextBlock Text="Комнаты" Style="{StaticResource MenuHeaderStyle}" Margin="0,15,0,0"/>
                        <ListView ItemsSource="{Binding Rooms}" 
                                  SelectedItem="{Binding SelectedRoom}"
                                  Height="150">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="5">
                                        <TextBlock Text="{Binding Number}" FontWeight="Bold" Foreground="Black"/>
                                        <TextBlock Text="{Binding Students.Count, StringFormat={}Заселено: {0}/{1}}"
                                                   Foreground="Black" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                            <Button Content="Добавить" Command="{Binding AddRoomCommand}" Style="{StaticResource SmallButtonStyle}"/>
                            <Button Content="Изменить" Command="{Binding EditRoomCommand}" Style="{StaticResource SmallButtonStyle}"/>
                            <Button Content="Удалить" Command="{Binding DeleteRoomCommand}" Style="{StaticResource SmallButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Статистика -->
                <Border Grid.Row="2" Background="#FF252526" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Статистика" Style="{StaticResource MenuHeaderStyle}"/>
                        <TextBlock Text="{Binding TotalRooms, StringFormat={}Комнат: {0}}" Foreground="White" Margin="5"/>
                        <TextBlock Text="{Binding TotalStudents, StringFormat={}Студентов: {0}}" Foreground="White" Margin="5"/>
                        <TextBlock Text="{Binding AvailableSpaces, StringFormat={}Свободных мест: {0}}" Foreground="White" Margin="5"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок и поиск -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
                <TextBlock Text="{Binding SelectedDormitory.Name, StringFormat='Общежитие: {0}'}" 
                           Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>

                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200" Margin="10,0" Padding="5"/>
                <Button Content="Найти" Command="{Binding SearchCommand}" Margin="0,0,10,0" Padding="10,5"/>

                <Button Content="Перевести всех на след. курс" 
                        Command="{Binding MoveAllToNextCourseCommand}" 
                        Margin="10,0,0,0" Padding="10,5"/>

                <Button Content="Тест БД" 
        Command="{Binding TestDbConnectionCommand}"
        Margin="5"
        Padding="10,5"
        ToolTip="Проверить подключение к базе данных"/>

            </StackPanel>

            <!-- Основной контент -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о комнате -->
                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0" Padding="0,0,10,0">
                    <StackPanel>
                        
                        <TextBlock Text="{Binding SelectedRoom.Number, StringFormat='Комната: {0}'}" 
                                   Style="{StaticResource SubHeaderStyle}"/>

                        <Grid Margin="0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Вместимость:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding SelectedRoom.Capacity}" Grid.Row="0" Grid.Column="1"/>

                            <TextBlock Text="Заселено:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                            <TextBlock Text="{Binding SelectedRoom.Students.Count}" Grid.Row="1" Grid.Column="1"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                            <Button Content="Заселить" Command="{Binding AccommodateStudentCommand}" 
                                    Style="{StaticResource ActionButtonStyle}"/>
                            <Button Content="Выселить" Command="{Binding EvictStudentCommand}" 
                                    Style="{StaticResource ActionButtonStyle}"/>
                            <Button Content="Перевести" Command="{Binding TransferStudentCommand}" 
                                    Style="{StaticResource ActionButtonStyle}"/>
                            
                        </StackPanel>
                        <Button Content="История" 
        Command="{Binding ShowStudentHistoryCommand}" 
        Margin="5" Padding="8 4"/>
                    </StackPanel>
                </Border>

                <!-- Список студентов -->
                <DataGrid Grid.Column="1" ItemsSource="{Binding Students}" 
                          SelectedItem="{Binding SelectedStudent}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="10,0,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="2*"/>
                        <DataGridTextColumn Header="Группа" Binding="{Binding GroupName}" Width="*"/>
                        <DataGridTextColumn Header="Курс" Binding="{Binding Course}" Width="*"/>
                        <DataGridTextColumn Header="Комната" Binding="{Binding Room.Number}" Width="*"/>
                    </DataGrid.Columns>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Добавить студента" Command="{Binding AddStudentCommand}"/>
                            <MenuItem Header="Изменить" Command="{Binding EditStudentCommand}"/>
                            <MenuItem Header="Удалить" Command="{Binding DeleteStudentCommand}"/>
                            <Separator/>
                            <MenuItem Header="Заселить" Command="{Binding AccommodateStudentCommand}"/>
                            <MenuItem Header="Выселить" Command="{Binding EvictStudentCommand}"/>
                            <MenuItem Header="Перевести" Command="{Binding TransferStudentCommand}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>

            <!-- Статус бар -->
            <StatusBar Grid.Row="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>